{
  "rule_name": "Extension Sample Rule",
  "rule_description": "Rules for organizing files under folder based on extensions.",
  "directory_path": "$HOME/test/extensions",
  "is_recursive_search": false,
  "targets": [
    {
      "target_path": "$HOME/test/extensions/docs",
      "match_any_condition": true,
      "conditions": [
        {
          "condition_type": "EXTENSION_TYPE",
          "extensions": [
            "pdf",
            "docx",
            "txt"
          ]
        }
      ]
    },
    {
      "target_path": "$HOME/test/extensions/compressed",
      "match_any_condition": true,
      "conditions": [
        {
          "condition_type": "EXTENSION_TYPE",
          "extensions": [
            "zip",
            "tar",
            "gz",
            "rar"
          ]
        }
      ]
    }
  ]
}